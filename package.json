{
  "name": "ai-debates",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/web",
    "src/api",
    "src/bot"
  ],
  "scripts": {
    "dev": "concurrently -n web,api -c blue,green \"bun run dev:web\" \"bun run dev:api\"",
    "dev:web": "vite",
    "dev:api": "bun --watch src/api/index.ts",
    "bot": "bun --hot src/bot/server.ts",
    "claude": "bun --hot src/bot/claude-bot.ts",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint src/web --ext .ts,.tsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint src/web --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:api": "tsc --noEmit -p src/api/tsconfig.json",
    "typecheck:bot": "tsc --noEmit -p src/bot/tsconfig.json",
    "typecheck:all": "bun run typecheck && bun run typecheck:api && bun run typecheck:bot",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "checks": "bun run lint && bun run format:check && bun run typecheck:all && bun run test:run",
    "db:start": "docker run -d --name ai-debates-db -e POSTGRES_PASSWORD=dev -e POSTGRES_DB=ai_debates -p 5432:5432 postgres:16",
    "db:stop": "docker stop ai-debates-db && docker rm ai-debates-db",
    "db:generate": "cd src/api && bunx drizzle-kit generate",
    "db:migrate": "bun run src/api/scripts/migrate.ts",
    "db:seed": "bun run src/api/scripts/seed.ts",
    "db:clear": "bun run src/api/scripts/clear.ts",
    "db:studio": "cd src/api && bunx drizzle-kit studio",
    "docs": "bun run scripts/serve-docs.ts"
  },
  "dependencies": {
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.98.0",
    "@tanstack/react-query": "^5.64.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "flowbite": "^4.0.1",
    "flowbite-react": "^0.12.17",
    "lucide-react": "^0.474.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@eslint/js": "^9.19.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "^1.2.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.5.14",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "express": "^4.21.2",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "nanoid": "^5.0.9",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.17",
    "tweetnacl": "^1.0.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  }
}
