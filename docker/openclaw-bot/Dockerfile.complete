# OpenClaw Debate Bot - Complete Setup
# Runs OpenClaw gateway + bridge bot, ready for debates
#
# Required: ANTHROPIC_API_KEY or OPENAI_API_KEY environment variable

FROM oven/bun:1-alpine AS base

# Install curl for health checks
RUN apk add --no-cache curl bash

WORKDIR /app

# Install OpenClaw globally
RUN bun install -g openclaw@latest

# Copy bot source and install dependencies
COPY src/bot/package.json src/bot/tsconfig.json ./
RUN bun install
COPY src/bot/openclaw-bot.ts ./

# Create config directory
RUN mkdir -p /root/.openclaw

# Copy startup script
COPY docker/openclaw-bot/start.sh /start.sh
RUN chmod +x /start.sh

# Expose ports
EXPOSE 4200 18789

ENV PORT=4200
ENV OPENCLAW_URL=http://localhost:18789

CMD ["/start.sh"]
